{{#extends "base"}}
{{#block "content"}}
<div class="container d-flex justify-content-between mt-3">
    <div>
        <span class="fs-4">{{lure.name}}'s variants</span>
    </div>
    <div class="d-flex align-items-lg-center mt-3 mt-lg-0">
        <a href="/lures/{{lure.id}}/variant/create" style="font-size: 16px;" class="btn btn-sm btn-primary">
            Add New Variant
        </a>
    </div>
</div>
<hr>
{{#if variants}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th></th>
            <th>Colour</th>
            <th>Property</th>
            <th>Stock</th>
            <th>Cost</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each variants}}
        <tr>
            <td>{{id}}</td>
            <td><img src="{{thumbnail_url}}" /></td>
            <td>{{colour.name}}</td>
            <td>{{property.name}}</td>
            <td>{{stock}}</td>
            <td>${{toDollars cost}}</td>
            <td>
                <div class="d-flex gap-1">
                    <a href="/cart/variant/{{id}}/add" class="btn btn-success btn-sm"><i class="bi bi-cart-plus"></i></a>
                    <a href="/lures/{{lure_id}}/variant/{{id}}/update" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i></a>
                    <a href="/lures/{{lure_id}}/variant/{{id}}/delete" class="btn btn-danger btn-sm "><i class="bi bi-trash3"></i></a>
                </div>
                </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
{{/if}}
{{/block}}
{{/extends}}