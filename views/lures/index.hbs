{{#extends "base"}}
{{#block "content"}}
<div class="container d-flex justify-content-between mt-3">
    <div>
    <h3>Lures</h3>
    </div>
    <div class="d-flex align-items-lg-center mt-3 mt-lg-0">
        <a href="./lures/create" style="font-size: 16px;"class="btn btn-sm btn-primary">
            Add Lure
        </a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Hook</th>
            <th>Type</th>
            <th>Size</th>
            <th>Weight</th>
            <th>Depth</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each lures}}
            <tr>
                <td>
                    {{id}}
                </td>
                <td>
                    {{name}}
                </td>
                <td>
                    {{hook}}
                </td>
                <td>
                    {{type}}
                </td>
                <td>
                    {{size}}
                </td>
                <td>
                    {{weight}}
                </td>
                <td>
                    {{depth}}
                </td>
                <td>
                    {{description}}
                </td>
                <td>
                   <a href="/lures/{{id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/lures/{{id}}/delete" class="btn btn-danger btn-sm mt-2">Delete</a> 
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}
{{/extends}}